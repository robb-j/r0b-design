<div class="skeleton-group">
  <h2 class="skeleton-title">colors</h2>
  
  <h3 class="skeleton-heading">brand</h3>
  <div class="color-list">
    {{> color-block name="magenta" }}
    {{> color-block name="berry" }}
    {{> color-block name="liberty" }}
    {{> color-block name="blue" }}
    {{> color-block name="silver" }}
  </div>
  
  <h3 class="skeleton-heading">utility</h3>
  <div class="color-list">
    {{> color-block name="primary" }}
    {{> color-block name="secondary" }}
    {{> color-block name="success" }}
    {{> color-block name="info" }}
    {{> color-block name="warning" }}
    {{> color-block name="danger" }}
  </div>
  
