    {{> color-block name="white" }}
    {{> color-block name="white-ish" }}
    
    {{> color-block name="gray-light-3" }}
    {{> color-block name="gray-light-2" }}
    {{> color-block name="gray-light-1" }}
    {{> color-block name="gray" }}
    {{> color-block name="gray-dark-1" }}
    {{> color-block name="gray-dark-2" }}
    {{> color-block name="gray-dark-3" }}
    
    {{> color-block name="black-ish" }}
